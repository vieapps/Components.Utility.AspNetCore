<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>net.vieapps.Components.Utility</RootNamespace>
		<WarningLevel>3</WarningLevel>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\VIEApps.Components.Utility.AspNetCore.xml</DocumentationFile>
		<AssemblyName>VIEApps.Components.Utility.AspNetCore</AssemblyName>
		<AssemblyTitle>VIEApps NGX Utility</AssemblyTitle>
		<SignAssembly>$(Sign)</SignAssembly>
		<DefineConstants>$(SignConstant)</DefineConstants>
		<AssemblyOriginatorKeyFile>../VIEApps.Components.snk</AssemblyOriginatorKeyFile>
		<AssemblyVersion>10.3$(ReleaseVersion)</AssemblyVersion>
		<FileVersion>10.3$(ReleaseVersion)</FileVersion>
		<InformationalVersion>10.3-$(TargetFramework)-$(ReleaseRevision)</InformationalVersion>
		<Version>10.3$(ReleaseVersion)$(ReleaseSurfix)</Version>
		<Product>VIEApps NGX</Product>
		<Title>VIEApps NGX Utility for ASP.NET Core</Title>
		<Description>The general purpose library for developing apps with ASP.NET Core</Description>
		<Copyright>© 2019 VIEApps.net</Copyright>
		<Authors>VIEApps.net</Authors>
		<Company>VIEApps.net</Company>
		<GeneratePackageOnBuild>$(GeneratePackage)</GeneratePackageOnBuild>
		<PackageId>VIEApps.Components.Utility.AspNetCore$(PackageSurfix)</PackageId>
		<PackageLicense>LICENSE.md</PackageLicense>
		<PackageOutputPath>..\</PackageOutputPath>
		<PackageTags>utility;aspnetcore;vieapps;vieapps.components</PackageTags>
		<PackageReleaseNotes>Support .NET Standard 2.1</PackageReleaseNotes>
		<PackageProjectUrl>https://vieapps.net/</PackageProjectUrl>
		<PackageIconUrl>https://github.com/vieapps/Components.Utility/raw/master/logo.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/vieapps/Components.Utility.AspNetCore</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".DS_Store" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="LICENSE.md" />
		<None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
		<PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
		<PackageReference Include="VIEApps.Components.Caching" Version="10.3.1907.1-preview" />
		<PackageReference Include="VIEApps.Components.Security" Version="10.3.1907.1-preview" />
		<PackageReference Include="VIEApps.Components.Utility" Version="10.3.1907.1-preview" />
		<PackageReference Include="VIEApps.Components.WebSockets" Version="10.3.1907.1-preview" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.0.0-preview6.19304.6" />
	</ItemGroup>

</Project>